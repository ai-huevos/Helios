{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "2.1.0",
  "meta": {
    "name": "AI Huevos Design Tokens",
    "tagline": "Pa' emprender se necesitan huevos",
    "description": "Portable brand tokens for AI Huevos frontend development"
  },

  "color": {
    "brand": {
      "white": { "value": "#FFFFFF", "usage": "Backgrounds, text on dark" },
      "black": { "value": "#030102", "usage": "Primary text, wordmark" },
      "yellow": { "value": "#FFD826", "usage": "Primary accent, egg mascot, secondary CTA" },
      "blue": { "value": "#3988FF", "usage": "Primary accent, links, egg mascot alt" },
      "violet": { "value": "#B4A7FA", "usage": "Accents only - lower proportion" },
      "orange": { "value": "#FF6B35", "usage": "CTAs ONLY - never background" }
    },
    "extended": {
      "grayDark": { "value": "#8B8B8B", "usage": "Section dividers, captions" },
      "grayLight": { "value": "#E8E8E8", "usage": "Subtle backgrounds" }
    },
    "semantic": {
      "success": { "value": "#10B981", "usage": "Positive actions, completion" },
      "warning": { "value": "#F59E0B", "usage": "Caution, pending status" },
      "error": { "value": "#EF4444", "usage": "Errors, destructive actions" },
      "info": { "value": "#3B82F6", "usage": "Information, hints" }
    },
    "neutral": {
      "50": "#F9FAFB",
      "100": "#F3F4F6",
      "200": "#E5E7EB",
      "300": "#D1D5DB",
      "400": "#9CA3AF",
      "500": "#6B7280",
      "600": "#4B5563",
      "700": "#374151",
      "800": "#1F2937",
      "900": "#111827"
    }
  },

  "contrast": {
    "safe": {
      "blackOnWhite": "20.9:1 AAA",
      "whiteOnBlack": "20.9:1 AAA",
      "yellowOnBlack": "13.9:1 AAA",
      "violetOnBlack": "9.1:1 AAA",
      "orangeOnBlack": "6.5:1 AA",
      "blueOnBlack": "5.9:1 AA"
    },
    "forbidden": {
      "yellowOnWhite": "1.5:1 FAIL - NEVER USE",
      "violetOnWhite": "2.3:1 FAIL - NEVER USE"
    },
    "largeTextOnly": {
      "blueOnWhite": "3.5:1 - Large text only",
      "orangeOnWhite": "3.2:1 - Large text only"
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "'Scandia', 'Inter', system-ui, -apple-system, sans-serif",
      "mono": "'Geist Mono', 'Monaco', 'Courier New', monospace"
    },
    "scale": {
      "h1": { "size": "32px", "weight": "700", "lineHeight": "1.2" },
      "h2": { "size": "28px", "weight": "700", "lineHeight": "1.3" },
      "h3": { "size": "24px", "weight": "600", "lineHeight": "1.4" },
      "h4": { "size": "20px", "weight": "600", "lineHeight": "1.4" },
      "bodyLarge": { "size": "16px", "weight": "400", "lineHeight": "1.6" },
      "body": { "size": "14px", "weight": "400", "lineHeight": "1.5" },
      "small": { "size": "12px", "weight": "400", "lineHeight": "1.5" },
      "metric": { "size": "48px", "weight": "700", "lineHeight": "1.1", "font": "mono" }
    }
  },

  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "24px",
    "2xl": "32px",
    "3xl": "40px",
    "4xl": "48px"
  },

  "borderRadius": {
    "sm": "4px",
    "md": "6px",
    "lg": "8px",
    "xl": "12px",
    "full": "9999px",
    "egg": "50% 50% 50% 50% / 60% 60% 40% 40%"
  },

  "shadow": {
    "sm": "0 1px 2px 0 rgba(0,0,0,0.05)",
    "md": "0 4px 6px -1px rgba(0,0,0,0.1)",
    "lg": "0 10px 15px -3px rgba(0,0,0,0.1)",
    "card": "0 1px 3px 0 rgba(0,0,0,0.1), 0 1px 2px 0 rgba(0,0,0,0.06)"
  },

  "buttons": {
    "primaryCTA": {
      "background": "#FF6B35",
      "text": "#030102",
      "hover": "#E55A2B"
    },
    "secondary": {
      "background": "#FFD826",
      "text": "#030102",
      "hover": "#E5C222"
    },
    "outline": {
      "border": "#030102",
      "text": "#030102",
      "hover": "#F3F4F6"
    }
  },

  "rules": {
    "maxColorsPerComposition": 3,
    "orangeUsage": "CTAs only - NEVER as background",
    "violetUsage": "Accents only - NEVER dominant",
    "yellowTextOnWhite": "FORBIDDEN - fails WCAG",
    "textCase": "Sentence case always - NEVER ALL CAPS",
    "logoSource": "Always use official SVG - NEVER CSS shapes or emoji"
  },

  "css": {
    "variables": ":root {\n  --white: #FFFFFF;\n  --black: #030102;\n  --yellow: #FFD826;\n  --blue: #3988FF;\n  --violet: #B4A7FA;\n  --orange: #FF6B35;\n  --font-primary: 'Scandia', system-ui, sans-serif;\n  --font-mono: 'Geist Mono', monospace;\n  --radius-egg: 50% 50% 50% 50% / 60% 60% 40% 40%;\n}"
  },

  "tailwind": {
    "colors": {
      "brand": {
        "white": "#FFFFFF",
        "black": "#030102",
        "yellow": "#FFD826",
        "blue": "#3988FF",
        "violet": "#B4A7FA",
        "orange": "#FF6B35"
      }
    }
  }
}
